alias kga="kg all"
alias kgay="kg all -oyaml"
alias kgc="kg cm"
alias kgcy="kg cm -oyaml"
alias kgd="kg deploy"
alias kgdy="kg deploy -oyaml"
alias kgr="kg rs"
alias kgry="kg rs -oyaml"
alias kgj="kg job"
alias kgjy="kg job -oyaml"
alias kgcj="kg cj"
alias kgcjy="kg cj -oyaml"
alias kgs="kg service"
alias kgsy="kg service -oyaml"
alias kgn="kg node"
alias kgny="kg node -oyaml"
alias kgsm="kg sm"
alias kgsmy="kg sm -oyaml"
alias kdn="kd node"
alias kdp="kd pod"
alias kdc="kd cm"
alias kdd="kd deploy"
alias kdr="kd rs"
alias kdj="kd job"
alias kdcj="kd cj"
alias kds="kd service"
alias kgf="kg foo" # test crd
alias kgfy="kg foo -oyaml"

# docker
alias d="docker"
alias dps="docker ps"
alias dpsa="docker ps -a"
alias di="docker images"
alias dia="docker images -a"
alias dr="docker run"
alias dp="docker pull"
alias dr="docker restart"
alias drm="docker rm"
alias drmi="docker rmi"
