
if [ "$(hostname)" = "kjttks" ]; then
  # Main screen refresh rate
  xrandr --output DVI-I-1 --mode 1920x1080 --rate 144
fi

# Set keyboard layout
setxkbmap -layout us,us \
          -variant colemak,intl \
          -option caps:none \
          -option compose:caps \
          -option grp:lalt_lshift_toggle

# tmux and guake
tmux start-server
/usr/bin/guake &
