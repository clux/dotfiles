
if [ "$(hostname)" = "kjttks" ]; then
  # Main screen refresh rate
  xrandr --output DVI-I-1 --mode 1920x1080 --rate 144
fi

# Set keyboard layout
setxkbmap -layout us,us \
          -variant colemak,intl \
          -option caps:none \
          -option compose:caps \
          -option grp:lalt_lshift_toggle

# tmux and default guake tabs
tmux start-server

/usr/bin/guake &
sleep 5 # apparently recommended by guake

# guake tab 1: ncmpcpp
guake --new-tab --execute="/usr/bin/bash"
guake --execute="exec tmux attach-session -t 0" --rename-tab="ncmpcpp"
# guake tab 2: profanity
guake --new-tab --execute="/usr/bin/bash"
guake --execute="exec tmux attach-session -t 1" --rename-tab="profanity"
# guake tab 3: dev
guake --new-tab --execute="/usr/bin/bash"
guake --execute="exec tmux attach-session -t 2" --rename-tab="dev"
