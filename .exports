#!/bin/bash

export EDITOR=vim;

# Prefer GB English and use UTF-8
export LANG="en_GB.UTF-8"
export LC_ALL="en_GB.UTF-8"

# Donâ€™t clear the screen after quitting a manual page
export MANPAGER="less -X";

# By default compile everything with clang
# Unless we are on a source based distro
if lsb_release -d | grep -qvi "Gentoo"; then
  export CC=clang
  export CXX=clang++
fi

# want short ctest results without having to type --output-on-failure (or -V always)
export CTEST_OUTPUT_ON_FAILURE=1
export GTEST_COLOR=1

# When developing rust, always print backtraces
export RUST_BACKTRACE=1

# use shellcheck for current file only
export SHELLCHECK_OPTS="-e SC1091 -e SC1090"

# brotorr uses this
export DOWNLOAD_DIR=/mnt/zeus/DL/
if [ "$(hostname)" = "broxy" ]; then
  export DOWNLOAD_DIR=/media/dumptruck/DL
fi

# so we can run dotclux/tasks standalone
export gh='git@github.com:'

# disable cowsay in ansible even though we have it installed
export ANSIBLE_NOCOWS=1
