[cinnamon]
desktop-effects=false
startup-animation=false

[cinnamon/desktop/interface]
gtk-theme='Adwaita-dark'

[cinnamon/desktop/peripherals/mouse]
accel-profile='flat'

[cinnamon/settings-daemon/peripherals/touchpad]
scroll-method='two-finger-scrolling'
tap-to-click=false

[cinnamon/settings-daemon/peripherals/keyboard]
numlock-state='on'

[custom0]
binding=['AudioPlay']
command='mpc toggle'
name='MPD Toggle'

[custom1]
binding=['AudioNext']
command='mpc next'
name='MPD Next'

[custom2]
binding=['AudioPrev']
command='mpc prev'
name='MPD Prev'

[custom3]
binding=['F1']
command="/bin/zsh -c 'source .functions && terminal_toggle'"
name='Toggle Alacritty'

[cinnamon/desktop/keybindings]
custom-list=['custom0', 'custom1', 'custom2']

[cinnamon/desktop/keybindings/media-keys]
previous=@as []
next=@as []
play=@as []
stop=@as []
pause=@as []
media=@as []
screenshot-clip=['<Primary>Print']
screenshot=@as []
window-screenshot=['Print']

[cinnamon/desktop/keybindings/wm]
switch-to-workspace-up=@as []
switch-to-workspace-left=@as []
switch-to-workspace-right=@as []
switch-to-workspace-down=@as []
move-to-workspace-up=@as []
move-to-workspace-left=@as []
move-to-workspace-right=@as []
move-to-workspace-down=@as []
push-snap-up=@as []
push-snap-left=@as []
push-snap-right=@as []
push-snap-down=@as []
move-to-monitor-up=['<Super>Up']
move-to-monitor-left=['<Super>Left']
move-to-monitor-right=['<Super>Right']
move-to-monitor-down=['<Super>Down']
push-tile-up=@as []
push-tile-left=@as []
push-tile-right=@as []
push-tile-down=@as []

[cinnamon/desktop/media-handling]
autorun-never=true

[cinnamon/desktop/applications/terminal]
exec='alacritty'

[cinnamon/desktop/privacy]
recent-files-max-age=0
remember-recent-files=false
remove-old-trash-files=true

[cinnamon/desktop/interface]
font-name='Liberation Sans 9'

[cinnamon/desktop/wm/preferences]
titlebar-font='Liberation Sans Bold 10'

[gnome/desktop/interface]
document-font-name='Liberation Sans 9'
monospace-font-name='Liberation Mono 11'

[gnome/libgnomekbd/keyboard]
layouts=['us\tcolemak', 'us\tintl']
options=['grp\tgrp:alt_shift_toggle', 'caps\tcaps:escape']

[nemo/preferences]
executable-text-activation='display'
default-folder-viewer='compact-view'
show-hidden-files=true

[nemo/desktop]
font='Liberation Serif 9'
